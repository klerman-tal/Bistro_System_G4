<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" stylesheets="@Style.css"
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="guiControllers.Menu_BController">

    <!-- HEADER -->
    <top>
        <HBox fx:id="header" alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="18" left="25" right="25" top="18"/>
            </padding>
            <children>
                <Label styleClass="title" text="Main Menu" textFill="WHITE"/>
                <Region HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="18">
            <padding>
                <Insets bottom="20" left="40" right="40" top="30"/>
            </padding>

            <children>
                <Label styleClass="section" text="Choose an action"/>

                <!-- Table Reservation -->
                <Button fx:id="btnReservation"
                        maxWidth="300"
                        prefWidth="260"
                        styleClass="btnSecondary"
                        text="Table Reservation"
                        onAction="#onSelectReservationClicked"/>

                <!-- âœ… NEW: Cancel Reservation -->
                <Button fx:id="btnCancelReservation"
                        maxWidth="300"
                        prefWidth="260"
                        styleClass="btnSecondary"
                        text="Cancel Reservation"
                        onAction="#onSelectCancelReservationClicked"/>

                <Button fx:id="btnPayment"
                        maxWidth="300"
                        prefWidth="260"
                        styleClass="btnSecondary"
                        text="Payment"
                        onAction="#onSelectPaymentClicked"/>

                <Button fx:id="btnPersonalDetails"
                        maxWidth="300"
                        prefWidth="260"
                        styleClass="btnSecondary"
                        text="Personal Details"
                        onAction="#onSelectPersonalDetailsClicked"/>

                <Button fx:id="btnGetTable"
                        maxWidth="300"
                        prefWidth="260"
                        styleClass="btnSecondary"
                        text="Get Table"
                        onAction="#onSelectGetTableClicked"/>

                <Button fx:id="btnJoinWaiting"
                        maxWidth="300"
                        prefWidth="260"
                        styleClass="btnSecondary"
                        text="Join Waiting List"
                        onAction="#onSelectJoinWaitingClicked"/>

                <Button fx:id="btnRestaurantManagement"
                        maxWidth="300"
                        prefWidth="260"
                        styleClass="btnSecondary"
                        text="Restaurant Management"
                        onAction="#onSelectRestaurantManagementClicked"/>

                <Label fx:id="lblMessage"
                       managed="false"
                       visible="false"
                       styleClass="errorMsg"
                       text=""/>

                <Button fx:id="btnLogout"
                        text="Logout"
                        onAction="#onLogoutClicked"
                        style="-fx-background-color: #000000;
                               -fx-text-fill: white;
                               -fx-font-size: 11px;
                               -fx-padding: 4 12;
                               -fx-background-radius: 12;"
                        styleClass="btnSecondary"/>
            </children>
        </VBox>
    </center>

</BorderPane>
