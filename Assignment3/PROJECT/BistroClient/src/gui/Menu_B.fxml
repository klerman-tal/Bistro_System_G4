<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.Menu_BController">

    <!-- ===== HEADER ===== -->
    <top>
        <HBox fx:id="header"
              alignment="CENTER">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <children>
                <Label text="Main Menu"
                       styleClass="mainTitle">
                    <font>
                        <Font size="44"/>
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- ===== CONTENT ===== -->
    <center>
        <VBox alignment="TOP_CENTER"
              spacing="22">
            <padding>
                <Insets top="35" right="40" bottom="20" left="40"/>
            </padding>

            <children>

                <Label text="Choose an action"
                       styleClass="section"/>

                <!-- ===== MAIN ACTIONS ===== -->
                <Button text="Reservations"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"
                        onAction="#onSelectReservationsClicked"/>

                <Button text="My Visit"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"
                        onAction="#onSelectMyVisitClicked"/>

                <Button fx:id="btnPersonalDetails"
                        text="Personal Details"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"
                        onAction="#onSelectPersonalDetailsClicked"/>

                <!-- ===== STAFF ONLY ===== -->
                <Button fx:id="btnRestaurantManagement"
                        text="Restaurant Management"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"
                        onAction="#onSelectRestaurantManagementClicked"/>

                <!-- ===== ACT AS (STAFF ONLY) ===== -->
                <BorderPane fx:id="actAsBox"
                            visible="false"
                            managed="false"
                            style="-fx-background-color: rgba(0,0,0,0.04);
                                   -fx-background-radius: 12;
                                   -fx-padding: 12;">
                    <top>
                        <Label text="Work on behalf of a customer (staff only)"
                               style="-fx-font-weight: bold;"/>
                    </top>

                    <center>
                        <VBox spacing="10">

                            <Label fx:id="lblActingUser"
                                   text="Acting User: â€”"/>

                            <HBox spacing="10">
                                <TextField fx:id="txtIdForRegistered"
                                           promptText="id for registered (existing user)"
                                           prefWidth="260"/>

                                <TextField fx:id="txtPhoneForNewGuest"
                                           promptText="phone for new guest"
                                           prefWidth="220"/>
                            </HBox>

                            <HBox spacing="10">
                                <Button fx:id="btnOk"
                                        text="OK"
                                        onAction="#onOkClicked"/>

                                <Button text="Reset to myself"
                                        onAction="#onResetToMyselfClicked"/>
                            </HBox>

                        </VBox>
                    </center>
                </BorderPane>

                <!-- ===== MESSAGE ===== -->
                <Label fx:id="lblMessage"
                       visible="false"
                       managed="false"
                       styleClass="errorMsg"/>

                <!-- ===== LOGOUT ===== -->
                <Button text="Logout"
                        styleClass="btnBack"
                        onAction="#onLogoutClicked"/>

            </children>
        </VBox>
    </center>

</BorderPane>
