<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.ReportsMenuController">

    <!-- ================= HEADER ================= -->
    <top>
        <HBox fx:id="header" alignment="CENTER">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>
            <children>
                <Label text="Reports"
                       styleClass="mainTitle">
                    <font>
                        <Font size="44"/>
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="22">
            <padding>
                <Insets top="35" right="40" bottom="20" left="40"/>
            </padding>

            <children>

                <!-- Section title -->
                <Label text="Choose report type"
                       styleClass="section"/>

                <!-- Actions -->
                <Button fx:id="btnTimeReport"
                        text="Time Report"
                        onAction="#onTimeReportClicked"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"/>

                <Button fx:id="btnSubscribersReport"
                        text="Subscribers Report"
                        onAction="#onSubscribersReportClicked"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"/>

                <!-- Message -->
                <Label fx:id="lblMessage"
                       visible="false"
                       managed="false"
                       styleClass="errorMsg"/>

                <!-- ===== SUMMARY ===== -->
                <!-- Centered exactly like section title (inside same VBox) -->
                <VBox alignment="CENTER"
                      maxWidth="900"
                      styleClass="summary-box">
                    <Text fx:id="txtReportsSummaryText"
                          wrappingWidth="880"
                          styleClass="summary-text"/>
                </VBox>

                <!-- Back -->
                <Button fx:id="btnBack"
                        text="Back"
                        onAction="#onBackClicked"
                        styleClass="btnBack"/>

            </children>
        </VBox>
    </center>

</BorderPane>
