<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" stylesheets="@Style.css"
    xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="guiControllers.GetTableChoice_BController">

    <top>
        <HBox fx:id="header" alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="18" left="25" right="25" top="18" />
            </padding>
            <children>
                <Label styleClass="title" text="Get Table" textFill="WHITE" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Back" onAction="#onBackClicked"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 13px;" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="16">
            <padding>
                <Insets bottom="20" left="40" right="40" top="30" />
            </padding>

            <children>
                <Label styleClass="section" text="Choose how to get a table" />

                <Button text="Get table from reservation"
                        prefWidth="280"
                        styleClass="btnSecondary"
                        onAction="#onFromReservationClicked"/>

                <Button text="Get table from waiting list"
                        prefWidth="280"
                        styleClass="btnSecondary"
                        onAction="#onFromWaitingClicked"/>
            </children>
        </VBox>
    </center>

</BorderPane>
