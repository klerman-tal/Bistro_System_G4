<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.GetTableChoice_BController">

    <!-- ===== HEADER ===== -->
    <top>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="18" right="25" bottom="18" left="25"/>
            </padding>

            <children>
                <Label text="Get Table"
                       styleClass="title"
                       textFill="WHITE"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="Back"
                        styleClass="btnSecondary"
                        onAction="#onBackClicked"/>
            </children>
        </HBox>
    </top>

    <!-- ===== CENTER ===== -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="16">
            <padding>
                <Insets top="30" right="40" bottom="20" left="40"/>
            </padding>

            <children>
                <Label text="Choose how to get a table"
                       styleClass="section"/>

                <Button text="Get table from reservation"
                        prefWidth="280"
                        styleClass="btnSecondary"
                        onAction="#onFromReservationClicked"/>

                <Button text="Get table from waiting list"
                        prefWidth="280"
                        styleClass="btnSecondary"
                        onAction="#onFromWaitingClicked"/>
            </children>
        </VBox>
    </center>

</BorderPane>
