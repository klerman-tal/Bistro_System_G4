<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.Payment_BController">

    <!-- ToggleGroup -->
    <fx:define>
        <ToggleGroup fx:id="paymentTypeGroup"/>
    </fx:define>

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="18" right="25" bottom="18" left="25"/>
            </padding>
            <children>
                <Label text="Payment"
                       styleClass="title"
                       textFill="WHITE"/>
            </children>
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="25">
            <padding>
                <Insets top="30" right="40" bottom="20" left="40"/>
            </padding>

            <children>

                <Label text="Choose payment method"
                       styleClass="section"/>

                <HBox alignment="CENTER" spacing="30">
                    <children>
                        <RadioButton fx:id="rbCreditCard"
                                     text="Credit Card"
                                     toggleGroup="$paymentTypeGroup"/>

                        <RadioButton fx:id="rbCash"
                                     text="Cash"
                                     toggleGroup="$paymentTypeGroup"/>
                    </children>
                </HBox>

                <Separator prefWidth="350"/>

                <GridPane hgap="15" vgap="15">
                    <children>
                        <Label text="Last 4 digits:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtLast4Digits"
                                   promptText="1234"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Expiry date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtExpiryDate"
                                   promptText="MM/YY"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="CVV:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <PasswordField fx:id="txtCVV"
                                       promptText="***"
                                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </children>
                </GridPane>

                <Label fx:id="lblMessage"
                       visible="false"
                       managed="false"
                       styleClass="errorMsg"/>
            </children>
        </VBox>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="12">
            <padding>
                <Insets top="10" right="40" bottom="20" left="40"/>
            </padding>

            <children>
                <Button fx:id="btnBack"
                        text="Back"
                        styleClass="btnSecondary"
                        onAction="#onBackClicked"/>

                <Button fx:id="btnPay"
                        text="Pay"
                        styleClass="btnPrimary"
                        onAction="#onPayClicked"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>
