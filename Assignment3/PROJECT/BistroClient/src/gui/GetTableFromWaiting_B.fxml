<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.GetTableFromWaiting_BController">

    <!-- ===== HEADER ===== -->
    <top>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="18" right="25" bottom="18" left="25"/>
            </padding>

            <children>
                <Label text="Get Table"
                       styleClass="title"
                       textFill="WHITE"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="Back"
                        styleClass="btnSecondary"
                        onAction="#onBackClicked"/>
            </children>
        </HBox>
    </top>

    <!-- ===== CENTER ===== -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="14">
            <padding>
                <Insets top="30" right="40" bottom="20" left="40"/>
            </padding>

            <children>

                <Label text="Get table from waiting list"
                       styleClass="section"/>

                <Label text="Enter your confirmation code:"/>

                <TextField fx:id="txtCode"
                           maxWidth="220"
                           promptText="e.g., 123456"/>

                <Button fx:id="btnConfirm"
                        text="Confirm arrival"
                        prefWidth="220"
                        styleClass="btnPrimary"
                        onAction="#onConfirmClicked"/>

                <Label fx:id="lblInfo"
                       visible="false"
                       managed="false"
                       style="-fx-text-fill: #2e7d32; -fx-font-size: 12px;"/>

                <Label fx:id="lblError"
                       visible="false"
                       managed="false"
                       styleClass="errorMsg"/>

            </children>
        </VBox>
    </center>

</BorderPane>
