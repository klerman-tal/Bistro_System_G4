<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane"
            id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.ManageReservationController">

    <!-- ===== HEADER ===== -->
    <top>
        <VBox spacing="6">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="12">
                <VBox spacing="2">
                    <Label text="Manage Reservations"
                           styleClass="title"/>
                    <Label text="View and manage restaurant bookings"
                           styleClass="subtitle"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- ===== STATUS MESSAGE ===== -->
                <Label fx:id="lblStatus"
                       managed="false"
                       visible="false"
                       styleClass="errorMsg"/>
            </HBox>
        </VBox>
    </top>

    <!-- ===== CONTENT ===== -->
    <center>
        <VBox spacing="12" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="0" right="20" bottom="10" left="20"/>
            </padding>

            <!-- ===== RESERVATIONS TABLE ===== -->
            <VBox styleClass="card30"
                  spacing="10"
                  VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="18" right="18" bottom="18" left="18"/>
                </padding>

                <TableView fx:id="tblReservations"
                           VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colReservationId"
                                     text="Reservation ID"
                                     prefWidth="110"/>
                        <TableColumn fx:id="colDateTime"
                                     text="Date &amp; Time"
                                     prefWidth="140"/>
                        <TableColumn fx:id="colGuests"
                                     text="Guests"
                                     prefWidth="100"/>
                        <TableColumn fx:id="colCode"
                                     text="Conf. Code"
                                     prefWidth="150"/>
                        <TableColumn fx:id="colCreatedBy"
                                     text="Created By"
                                     prefWidth="160"/>
                        <TableColumn fx:id="colStatus"
                                     text="Status"
                                     prefWidth="120"/>
                        <TableColumn fx:id="colTableNumber"
                                     text="Table No."
                                     prefWidth="120"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- ===== FOOTER ===== -->
    <bottom>
        <VBox spacing="12">
            <padding>
                <Insets top="0" right="20" bottom="20" left="20"/>
            </padding>

            <Separator/>

            <!-- ===== ACTIONS ===== -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <padding>
                    <Insets top="10"/>
                </padding>
                <children>
                    <Button fx:id="btnAdd"
                            text="Add Reservation"
                            styleClass="btnPrimary"
                            onAction="#onAddClicked"/>

                    <Button fx:id="btnDelete"
                            text="Delete"
                            styleClass="btnDanger"
                            onAction="#onDeleteClicked"/>

                    <Button fx:id="btnBack"
                            text="Back"
                            styleClass="btnSecondary"
                            onAction="#onBackClicked"/>
                </children>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
