<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane"
            id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.ManageReservationController">

    <!-- ===== TOP HEADER ===== -->
    <top>
        <VBox spacing="6">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="12">
                <VBox spacing="2">
                    <Label text="Manage Reservations" styleClass="title"/>
                    <Label text="Add, update or delete reservations from the list"
                           styleClass="subtitle"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

                <Label fx:id="lblStatus"
                       managed="false"
                       visible="false"
                       styleClass="errorMsg"/>
            </HBox>
        </VBox>
    </top>

    <!-- ===== CENTER TABLE ===== -->
    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="0" right="20" bottom="10" left="20"/>
            </padding>

            <VBox styleClass="card30" spacing="10">
                <padding>
                    <Insets top="18" right="18" bottom="18" left="18"/>
                </padding>

                <TableView fx:id="tblReservations" prefHeight="420">
                    <columns>
                        <TableColumn fx:id="colReservationId" prefWidth="110" text="reservation_id"/>
                        <TableColumn fx:id="colDateTime" prefWidth="140" text="reservation_dateTime"/>
                        <TableColumn fx:id="colGuests" prefWidth="140" text="number_of_guests"/>
                        <TableColumn fx:id="colCode" prefWidth="150" text="confirmation_code"/>
                        <TableColumn fx:id="colCreatedBy" prefWidth="160" text="created_by"/>
                        <TableColumn fx:id="colStatus" prefWidth="120" text="reservation_status"/>
                        <TableColumn fx:id="colTableNumber" prefWidth="120" text="table_number"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- ===== BOTTOM FORM ===== -->
    <bottom>
        <VBox spacing="12">
            <padding>
                <Insets top="0" right="20" bottom="20" left="20"/>
            </padding>

            <Separator/>

            <VBox styleClass="card" spacing="14">
                <padding>
                    <Insets top="16" right="16" bottom="16" left="16"/>
                </padding>

                <Label text="Reservation details" styleClass="field-label"/>

                <GridPane hgap="12" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150"/>
                        <ColumnConstraints prefWidth="240"/>
                        <ColumnConstraints prefWidth="150"/>
                        <ColumnConstraints prefWidth="240"/>
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>

                    <!-- Row 0 -->
                    <Label text="Reservation ID:" styleClass="subtitle"
                           GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtReservationId"
                               promptText="(for update/delete)"
                               GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Confirmation Code:" styleClass="subtitle"
                           GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtConfirmationCode"
                               promptText="required"
                               GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <!-- Row 1 -->
                    <Label text="Date:" styleClass="subtitle"
                           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <DatePicker fx:id="dpDate"
                                GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Time (HH:mm):" styleClass="subtitle"
                           GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtTime"
                               promptText="19:30"
                               GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <!-- Row 2 -->
                    <Label text="Guests:" styleClass="subtitle"
                           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtGuests"
                               promptText="e.g. 4"
                               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Created By:" styleClass="subtitle"
                           GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtCreatedBy"
                               promptText="username/email"
                               GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                    <!-- Row 3 -->
                    <Label text="Reservation status" styleClass="subtitle"
                           GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <ComboBox fx:id="cmbReservationStatus"
                              promptText="Select status"
                              GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Label text="Table Number (optional):" styleClass="subtitle"
                           GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                    <TextField fx:id="txtTableNumber"
                               promptText="nullable"
                               GridPane.columnIndex="3" GridPane.rowIndex="3"/>
                </GridPane>

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Region HBox.hgrow="ALWAYS"/>

                    <Button fx:id="btnAdd"
                            onAction="#onAddClicked"
                            text="Add Reservation"
                            styleClass="btnPrimary"/>

                    <Button fx:id="btnUpdate"
                            onAction="#onUpdateClicked"
                            text="Update Reservation"
                            styleClass="btnSecondary"/>

                    <Button fx:id="btnDelete"
                            onAction="#onDeleteClicked"
                            text="Delete Reservation"
                            styleClass="btnDanger"/>

                    <Button fx:id="btnBack"
                            onAction="#onBackClicked"
                            text="Back"
                            styleClass="btnSecondary"/>
                </HBox>
            </VBox>
        </VBox>
    </bottom>

</BorderPane>
