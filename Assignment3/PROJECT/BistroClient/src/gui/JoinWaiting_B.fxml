<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.JoinWaiting_BController">

    <!-- ===== HEADER ===== -->
    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="18" right="25" bottom="18" left="25"/>
            </padding>
            <children>
                <Label text="Waiting List"
                       styleClass="mainTitle"
                       textFill="WHITE"/>
            </children>
        </HBox>
    </top>

    <!-- ===== CENTER ===== -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="30" right="40" bottom="20" left="40"/>
            </padding>

            <children>

                <Label text="Waiting List Details"
                       styleClass="section"/>

                <!-- Guests -->
                <TextField fx:id="txtGuests"
                           promptText="Number of guests"
                           maxWidth="260"/>

                <!-- Info -->
                <Label fx:id="lblInfo"
                       visible="false"
                       managed="false"
                       styleClass="infoMsg"/>

                <!-- Error -->
                <Label fx:id="lblError"
                       visible="false"
                       managed="false"
                       styleClass="errorMsg"/>

                <!-- Join -->
                <Button fx:id="btnJoin"
                        text="Join Waiting List"
                        onAction="#onJoinClicked"
                        prefWidth="260"
                        styleClass="btnSecondary"/>

                <!-- Back -->
                <Button fx:id="btnBack"
                        text="Back"
                        onAction="#onBackClicked"
                        prefWidth="260"
                        styleClass="btnPrimary"/>

            </children>
        </VBox>
    </center>

</BorderPane>
