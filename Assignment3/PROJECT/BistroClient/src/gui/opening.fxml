<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="403.0" prefWidth="700" spacing="15" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guiControllers.OpeningHoursController">

    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <!-- ===== TABLE ===== -->
    <TableView fx:id="openingHoursTable" prefHeight="280">
        <columns>
            <TableColumn fx:id="dayColumn" prefWidth="230" text="Day" />

            <TableColumn fx:id="openTimeColumn" prefWidth="220" text="Open Time" />

            <TableColumn fx:id="closeTimeColumn" prefWidth="220" text="Close Time" />
        </columns>
    </TableView>

    <!-- ===== UPDATE AREA ===== -->
    <HBox alignment="CENTER_LEFT" spacing="10">

        <Label text="New Time:" />
        <TextField fx:id="openTimeField" prefWidth="90" promptText="HH:MM" />

        <Button fx:id="updateButton" prefWidth="120" text="Update" />
    </HBox>

    <!-- ===== BACK BUTTON (BOTTOM RIGHT) ===== -->
    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="backButton" prefHeight="26.0" prefWidth="43.0" text="Back" />
    </HBox>

</VBox>
