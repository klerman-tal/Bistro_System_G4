<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guiControllers.ManageCurrentDiners_BController">
    <top>
        <VBox spacing="10" styleClass="header-area">
            <padding>
                <Insets bottom="20" left="25" right="25" top="20" />
            </padding>
            <children>
                <Label styleClass="title" text="Current Diners Management" />
                <Label styleClass="subtitle" text="View customers currently seated in the restaurant" />
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tblCurrentDiners" styleClass="custom-table">
            <columns>
                <TableColumn fx:id="colCreatedBy" prefWidth="150" text="Created By (ID)" />
                <TableColumn fx:id="colRole" prefWidth="200" text="Created By Role" />
                <TableColumn fx:id="colTableNum" prefWidth="150" text="Table Number" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15">
            <padding>
                <Insets bottom="20" left="20" right="25" top="20" />
            </padding>
            <children>
                <Button onAction="#onRefreshClicked" styleClass="btnSecondary" text="Refresh List" />
                <Button onAction="#onBackClicked" styleClass="btnSecondary" text="Back" />
            </children>
        </HBox>
    </bottom>
</BorderPane>