<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.ReservationMenu_BController"
            stylesheets="@Style.css">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="18" right="25" bottom="18" left="25"/>
            </padding>
            <children>
                <Label text="Reservation"
                       styleClass="title"
                       textFill="WHITE"/>
            </children>
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="40"/>
            </padding>

            <Button text="Create Reservation"
                    prefWidth="260"
                    styleClass="btnSecondary"
                    onAction="#onCreateReservation"/>

            <Button text="Cancel Reservation"
                    prefWidth="260"
                    styleClass="btnSecondary"
                    onAction="#onCancelReservation"/>

            <Button text="Back"
                    prefWidth="160"
                    styleClass="btnSecondary"
                    onAction="#onBack"/>
        </VBox>
    </center>

</BorderPane>
