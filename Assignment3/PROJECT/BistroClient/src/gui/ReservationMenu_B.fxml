<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.ReservationMenu_BController"
            stylesheets="@Style.css">

    <!-- ================= HEADER ================= -->
    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>
            <children>
                <Label text="Reservation Menu"
                       styleClass="mainTitle">
                    <font>
                        <Font size="44"/>
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="22">
            <padding>
                <Insets top="35" right="40" bottom="20" left="40"/>
            </padding>

            <children>

                <Button text="Create Reservation"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"
                        onAction="#onCreateReservation"/>

                <Button text="Cancel Reservation"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"
                        onAction="#onCancelReservation"/>

                <Button text="Join Waiting List"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"
                        onAction="#onJoinWaiting"/>

                <Button text="Cancel Waiting List"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"
                        onAction="#onCancelWaiting"/>

                <!-- ===== BACK ===== -->
                <Button text="Back"
                        styleClass="btnBack"
                        onAction="#onBack"/>

            </children>
        </VBox>
    </center>

</BorderPane>
