<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guiControllers.ManageWaitingListController">
    <top>
        <VBox spacing="6">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <children>
                <Label text="Waiting List Management" styleClass="title"/>
                <Label text="View and manage customers waiting for a table" styleClass="subtitle"/>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="12" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="0" right="20" bottom="10" left="20"/>
            </padding>
            <children>
                <TableView fx:id="tblWaitingList" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colWaitingId" prefWidth="80" text="Wait ID"/>
                        <TableColumn fx:id="colCreatedBy" prefWidth="100" text="Created By"/>
                        <TableColumn fx:id="colRole" prefWidth="100" text="Role"/>
                        <TableColumn fx:id="colGuests" prefWidth="80" text="Guests"/>
                        <TableColumn fx:id="colCode" prefWidth="120" text="Conf. Code"/>
                        <TableColumn fx:id="colFreedTime" prefWidth="150" text="Table Freed Time"/>
                        <TableColumn fx:id="colTableNum" prefWidth="90" text="Table No."/>
                        <TableColumn fx:id="colStatus" prefWidth="110" text="Status"/>
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Button onAction="#onRefreshClicked" text="Refresh List" styleClass="btnPrimary"/>
                
                <Button onAction="#onBackClicked" text="Back" styleClass="btnSecondary"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>