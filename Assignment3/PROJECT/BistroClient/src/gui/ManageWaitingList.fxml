<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.ManageWaitingListController">

    <!-- ===== HEADER ===== -->
    <top>
        <VBox spacing="6">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>

            <children>
                <Label text="Waiting List Management"
                       styleClass="title"/>
                <Label text="View and manage customers waiting for a table"
                       styleClass="subtitle"/>
            </children>
        </VBox>
    </top>

    <!-- ===== CONTENT ===== -->
    <center>
        <VBox spacing="12"
              VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="0" right="20" bottom="10" left="20"/>
            </padding>

            <children>

                <!-- ===== FILTER BAR (NEW) ===== -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="txtFilter"
                               promptText="Filter (id / code / created by / status / table...)"
                               prefWidth="300"/>

                    <ComboBox fx:id="cmbMatchMode"
                              prefWidth="120"/>

                    <Button text="X"
                            prefWidth="35"
                            onAction="#onClearFilter"/>
                </HBox>

                <!-- ===== WAITING LIST TABLE ===== -->
                <TableView fx:id="tblWaitingList"
                           VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colWaitingId"
                                     text="Wait ID"
                                     prefWidth="80"/>
                        <TableColumn fx:id="colCreatedBy"
                                     text="Created By"
                                     prefWidth="100"/>
                        <TableColumn fx:id="colRole"
                                     text="Role"
                                     prefWidth="100"/>
                        <TableColumn fx:id="colGuests"
                                     text="Guests"
                                     prefWidth="80"/>
                        <TableColumn fx:id="colCode"
                                     text="Conf. Code"
                                     prefWidth="120"/>
                        <TableColumn fx:id="colFreedTime"
                                     text="Table Freed Time"
                                     prefWidth="150"/>
                        <TableColumn fx:id="colTableNum"
                                     text="Table No."
                                     prefWidth="90"/>
                        <TableColumn fx:id="colStatus"
                                     text="Status"
                                     prefWidth="110"/>
                    </columns>

                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

            </children>
        </VBox>
    </center>

    <!-- ===== FOOTER ===== -->
    <bottom>
        <HBox alignment="CENTER_RIGHT"
              spacing="15">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>

            <children>

                <!-- ===== PRIMARY ACTIONS ===== -->
                <Button text="Add Entry"
                        styleClass="btnPrimary"
                        onAction="#onAddWaitingClicked"/>

                <Button text="Cancel Entry"
                        styleClass="btnSecondary"
                        onAction="#onCancelWaitingClicked"/>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- ===== SECONDARY ACTIONS ===== -->
                <Button text="Refresh List"
                        styleClass="btnPrimary"
                        onAction="#onRefreshClicked"/>

                <Button text="Back"
                        styleClass="btnSecondary"
                        onAction="#onBackClicked"/>

            </children>
        </HBox>
    </bottom>

</BorderPane>
