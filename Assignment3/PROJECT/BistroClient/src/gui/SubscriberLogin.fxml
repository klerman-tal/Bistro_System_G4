<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootPane"
           stylesheets="@Style.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="guiControllers.SubscriberLoginController">

    <children>

        <!-- ===== MAIN CONTAINER ===== -->
        <VBox alignment="CENTER"
              spacing="30.0"
              maxWidth="600.0">

            <children>

                <!-- ===== LOGO & TITLE ===== -->
                <VBox alignment="CENTER"
                      spacing="15.0">
                    <children>

                        <ImageView fitHeight="130.0"
                                   preserveRatio="true">
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                            <image>
                                <Image url="@BistroLogo.png"/>
                            </image>
                        </ImageView>

                        <VBox alignment="CENTER"
                              spacing="5.0">
                            <children>
                                <Label text="LOGIN AS SUBSCRIBER"
                                       styleClass="welcomeTitle"/>
                                <Label text="Please enter details or scan your card"
                                       styleClass="subtitleItalic"/>
                            </children>
                        </VBox>

                    </children>
                </VBox>

                <!-- ===== LOGIN CARD ===== -->
                <VBox alignment="CENTER"
                      spacing="18.0"
                      prefWidth="400.0"
                      prefHeight="480.0"
                      styleClass="card30">
                    <padding>
                        <Insets top="20.0" right="30.0" bottom="20.0" left="30.0"/>
                    </padding>

                    <children>

                        <!-- ===== CREDENTIALS ===== -->
                        <VBox spacing="5.0" alignment="CENTER_LEFT">
                            <children>
                                <Label text="SUBSCRIBER ID"
                                       styleClass="cardHint"/>
                                <TextField fx:id="subscriberIdField"
                                           promptText="e.g. 12345"/>
                            </children>
                        </VBox>

                        <VBox spacing="5.0" alignment="CENTER_LEFT">
                            <children>
                                <Label text="USERNAME"
                                       styleClass="cardHint"/>
                                <TextField fx:id="usernameField"
                                           promptText="Enter your name"/>
                            </children>
                        </VBox>

                        <!-- ===== PRIMARY ACTION ===== -->
                        <Button text="SIGN IN"
                                prefWidth="250.0"
                                styleClass="btnDanger"
                                onAction="#handleSubscriberLogin"/>

                        <!-- ===== ALTERNATIVE LOGIN ===== -->
                        <Label text="â€” OR USE CARD â€”"
                               style="-fx-text-fill: gray; -fx-font-size: 11px; -fx-font-weight: bold;"/>

                        <Button fx:id="btnBarcodeSim"
                                text="ðŸ’³ SCAN MEMBER CARD"
                                prefWidth="250.0"
                                prefHeight="40.0"
                                style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
                                onAction="#onBarcodeSimClicked"/>

                        <!-- ===== MESSAGE ===== -->
                        <Label fx:id="lblMessage"
                               visible="false"
                               managed="false"
                               styleClass="errorText"/>

                        <!-- ===== LINKS ===== -->
                        <VBox alignment="CENTER"
                              spacing="8.0">
                            <children>
                                <Hyperlink text="Forgot Subscriber Code?"
                                           styleClass="linkBlue"
                                           onAction="#handleForgotCode"/>
                                <Hyperlink text="â† Back to Welcome"
                                           styleClass="linkGray"
                                           onAction="#handleBackButton"/>
                            </children>
                        </VBox>

                    </children>
                </VBox>

            </children>
        </VBox>

    </children>
</StackPane>
