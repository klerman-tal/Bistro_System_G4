<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane id="rootPane"
           stylesheets="@Style.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="guiControllers.SubscriberLoginController">

    <children>

        <VBox alignment="CENTER" spacing="40.0" maxWidth="600.0">

            <children>

                <!-- ===== LOGO + HEADER ===== -->
                <VBox alignment="CENTER" spacing="15.0">
                    <children>

                        <ImageView fitHeight="140.0" preserveRatio="true">
                            <VBox.margin>
                                <Insets top="25.0"/>
                            </VBox.margin>
                            <image>
                                <Image url="@BistroLogo.png"/>
                            </image>
                        </ImageView>

                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="LOGIN AS SUBSCRIBER"
                                       styleClass="welcomeTitle"/>
                                <Label text="Please enter your subscription details"
                                       styleClass="subtitleItalic"/>
                            </children>
                        </VBox>

                    </children>
                </VBox>

                <!-- ===== LOGIN CARD ===== -->
                <VBox alignment="CENTER"
                      spacing="20.0"
                      prefWidth="400.0"
                      styleClass="card30">

                    <children>

                        <VBox spacing="5.0" alignment="CENTER_LEFT">
                            <children>
                                <Label text="SUBSCRIBER ID" styleClass="cardHint"/>
                                <TextField fx:id="subscriberIdField"
                                           promptText="e.g. 12345"/>
                            </children>
                        </VBox>

                        <VBox spacing="5.0" alignment="CENTER_LEFT">
                            <children>
                                <Label text="USERNAME" styleClass="cardHint"/>
                                <TextField fx:id="usernameField"
                                           promptText="Enter your name"/>
                            </children>
                        </VBox>

                        <Label fx:id="lblMessage"
                               visible="false"
                               managed="false"
                               styleClass="errorText"/>

                        <Button text="SIGN IN"
                                onAction="#handleSubscriberLogin"
                                styleClass="btnDanger"/>

                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Hyperlink text="Forgot Subscriber Code?"
                                           onAction="#handleForgotCode"
                                           styleClass="linkBlue"/>

                                <Hyperlink text="â† Back to Welcome"
                                           onAction="#handleBackButton"
                                           styleClass="linkGray"/>
                            </children>
                        </VBox>

                    </children>
                </VBox>

            </children>
        </VBox>

    </children>
</StackPane>
