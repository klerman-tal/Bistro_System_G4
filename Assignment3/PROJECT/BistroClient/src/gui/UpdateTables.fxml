<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.UpdateTablesController"
            stylesheets="@Style.css">

    <!-- ===== HEADER ===== -->
    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="18" right="25" bottom="18" left="25"/>
            </padding>
            <children>
                <Label text="Update Tables"
                       styleClass="mainTitle"
                       textFill="WHITE"/>
            </children>
        </HBox>
    </top>

    <!-- ===== CENTER ===== -->
    <center>
        <VBox alignment="CENTER" spacing="16">
            <padding>
                <Insets top="25" right="40" bottom="20" left="40"/>
            </padding>

            <children>

                <Label text="Add, edit, delete and refresh restaurant tables"
                       styleClass="section"/>

                <!-- MESSAGE -->
                <Label fx:id="lblMsg"
                       visible="false"
                       managed="false"
                       styleClass="errorMsg"/>

                <!-- TABLE -->
                <TableView fx:id="tblTables"
                           prefHeight="320"
                           maxWidth="520">
                    <columns>
                        <TableColumn fx:id="colNumber"
                                     text="Table #"
                                     prefWidth="260"/>
                        <TableColumn fx:id="colSeats"
                                     text="Seats"
                                     prefWidth="260"/>
                    </columns>
                </TableView>

                <!-- FORM -->
                <TextField fx:id="txtTableNumber"
                           promptText="Table #"
                           maxWidth="260"/>

                <TextField fx:id="txtSeats"
                           promptText="Seats"
                           maxWidth="260"/>

                <!-- ACTIONS -->
                <Button text="Add / Save"
                        prefWidth="260"
                        styleClass="btnSecondary"
                        onAction="#onAddOrSave"/>

                <Button text="Delete Selected"
                        prefWidth="260"
                        styleClass="btnSecondary"
                        onAction="#onDeleteSelected"/>

                <!-- BACK -->
                <Button text="Back"
                        prefWidth="260"
                        styleClass="btnPrimary"
                        onAction="#onBack"/>

            </children>
        </VBox>
    </center>

</BorderPane>
