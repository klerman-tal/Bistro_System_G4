<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane"
            id="rootPane"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.UpdateTablesController"
            stylesheets="@Style.css">

    <!-- ===== HEADER ===== -->
    <top>
        <VBox spacing="6">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="12">
                <children>
                    <VBox spacing="2">
                        <children>
                            <Label text="Update Tables" styleClass="title"/>
                            <Label text="Add, edit, delete and refresh restaurant tables" styleClass="subtitle"/>
                        </children>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label fx:id="lblMsg"
                           text=""
                           visible="false" managed="false"
                           styleClass="errorMsg"/>
                </children>
            </HBox>
        </VBox>
    </top>

    <!-- ===== CENTER CONTENT ===== -->
    <center>
        <VBox spacing="14">
            <padding>
                <Insets top="0" right="20" bottom="20" left="20"/>
            </padding>

            <!-- TABLE CARD -->
            <VBox styleClass="card30" spacing="10">
                <padding>
                    <Insets top="18" right="18" bottom="18" left="18"/>
                </padding>

                <children>
                    <TableView fx:id="tblTables" prefHeight="320">
                        <columns>
                            <TableColumn fx:id="colNumber" text="Table #" prefWidth="250"/>
                            <TableColumn fx:id="colSeats" text="Seats" prefWidth="250"/>
                        </columns>
                    </TableView>
                </children>
            </VBox>

            <!-- ACTIONS CARD -->
            <VBox styleClass="card" spacing="12">
                <padding>
                    <Insets top="16" right="16" bottom="16" left="16"/>
                </padding>

                <children>
                    <Label text="Table details" styleClass="field-label"/>

                    <HBox spacing="12" alignment="CENTER_LEFT">
                        <children>
                            <TextField fx:id="txtTableNumber" promptText="Table #"
                                       prefWidth="160"/>
                            <TextField fx:id="txtSeats" promptText="Seats"
                                       prefWidth="160"/>

                            <Region HBox.hgrow="ALWAYS"/>

                            <Button text="Add / Save"
                                    onAction="#onAddOrSave"
                                    styleClass="btnPrimary"/>
                        </children>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <children>
                            <Button text="Delete Selected"
                                    onAction="#onDeleteSelected"
                                    styleClass="btnDanger"/>

                           
                            <Region HBox.hgrow="ALWAYS"/>
                        </children>
                    </HBox>
                </children>
            </VBox>

        </VBox>
    </center>

    <!-- ===== BACK ===== -->
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="0" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Button text="Back"
                        onAction="#onBack"
                        styleClass="btnSecondary"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>
