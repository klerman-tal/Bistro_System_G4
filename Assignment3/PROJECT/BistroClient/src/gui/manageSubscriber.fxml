<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane"
            id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.ManageSubscriberController"
            prefWidth="1100"
            prefHeight="750">

    <!-- ===== HEADER ===== -->
    <top>
        <VBox spacing="6">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="12">
                <children>
                    <VBox spacing="2">
                        <children>
                            <Label text="Manage Subscribers"
                                   styleClass="title"/>
                            <Label text="View and update subscriber details"
                                   styleClass="subtitle"/>
                        </children>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <!-- ===== STATUS MESSAGE ===== -->
                    <Label fx:id="lblStatus"
                           managed="false"
                           visible="false"
                           styleClass="errorMsg"/>
                </children>
            </HBox>
        </VBox>
    </top>

    <!-- ===== CONTENT ===== -->
    <center>
        <ScrollPane fitToWidth="true"
                    fitToHeight="true"
                    pannable="true">
            <content>

                <VBox spacing="12">
                    <padding>
                        <Insets top="0" right="20" bottom="20" left="20"/>
                    </padding>

                    <!-- ===== SUBSCRIBERS TABLE ===== -->
                    <VBox styleClass="card30"
                          spacing="10"
                          VBox.vgrow="ALWAYS">
                        <padding>
                            <Insets top="18" right="18" bottom="18" left="18"/>
                        </padding>

                        <children>
                            <TableView fx:id="tblSubscribers"
                                       prefHeight="420"
                                       VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colSubscriberId"
                                                 text="subscriber_id"
                                                 prefWidth="120"/>
                                    <TableColumn fx:id="colUsername"
                                                 text="username"
                                                 prefWidth="150"/>
                                    <TableColumn fx:id="colFirstName"
                                                 text="first_name"
                                                 prefWidth="140"/>
                                    <TableColumn fx:id="colLastName"
                                                 text="last_name"
                                                 prefWidth="140"/>
                                    <TableColumn fx:id="colPhone"
                                                 text="phone"
                                                 prefWidth="150"/>
                                    <TableColumn fx:id="colEmail"
                                                 text="email"
                                                 prefWidth="220"/>
                                    <TableColumn fx:id="colRole"
                                                 text="role"
                                                 prefWidth="140"/>
                                </columns>
                            </TableView>
                        </children>
                    </VBox>

                    <!-- ===== SUBSCRIBER FORM ===== -->
                    <VBox styleClass="card"
                          spacing="14">
                        <padding>
                            <Insets top="16" right="16" bottom="16" left="16"/>
                        </padding>

                        <children>

                            <Label text="Subscriber details (select a row to fill fields)"
                                   styleClass="field-label"/>

                            <!-- ===== FORM FIELDS ===== -->
                            <GridPane hgap="12" vgap="12">
                                <columnConstraints>
                                    <ColumnConstraints prefWidth="150"/>
                                    <ColumnConstraints prefWidth="260" hgrow="ALWAYS"/>
                                    <ColumnConstraints prefWidth="150"/>
                                    <ColumnConstraints prefWidth="260" hgrow="ALWAYS"/>
                                </columnConstraints>

                                <!-- Row 0 -->
                                <Label text="Subscriber ID:"
                                       styleClass="subtitle"
                                       GridPane.columnIndex="0"
                                       GridPane.rowIndex="0"/>
                                <TextField fx:id="txtSubscriberId"
                                           promptText="(readonly)"
                                           editable="false"
                                           GridPane.columnIndex="1"
                                           GridPane.rowIndex="0"/>

                                <Label text="Username:"
                                       styleClass="subtitle"
                                       GridPane.columnIndex="2"
                                       GridPane.rowIndex="0"/>
                                <TextField fx:id="txtUsername"
                                           promptText="michal01"
                                           GridPane.columnIndex="3"
                                           GridPane.rowIndex="0"/>

                                <!-- Row 1 -->
                                <Label text="First Name:"
                                       styleClass="subtitle"
                                       GridPane.columnIndex="0"
                                       GridPane.rowIndex="1"/>
                                <TextField fx:id="txtFirstName"
                                           promptText="Michal"
                                           GridPane.columnIndex="1"
                                           GridPane.rowIndex="1"/>

                                <Label text="Last Name:"
                                       styleClass="subtitle"
                                       GridPane.columnIndex="2"
                                       GridPane.rowIndex="1"/>
                                <TextField fx:id="txtLastName"
                                           promptText="Levi"
                                           GridPane.columnIndex="3"
                                           GridPane.rowIndex="1"/>

                                <!-- Row 2 -->
                                <Label text="Phone:"
                                       styleClass="subtitle"
                                       GridPane.columnIndex="0"
                                       GridPane.rowIndex="2"/>
                                <TextField fx:id="txtPhone"
                                           promptText="0521234567"
                                           GridPane.columnIndex="1"
                                           GridPane.rowIndex="2"/>

                                <Label text="Email:"
                                       styleClass="subtitle"
                                       GridPane.columnIndex="2"
                                       GridPane.rowIndex="2"/>
                                <TextField fx:id="txtEmail"
                                           promptText="name@example.com"
                                           GridPane.columnIndex="3"
                                           GridPane.rowIndex="2"/>

                                <!-- Row 3 -->
                                <Label text="Role:"
                                       styleClass="subtitle"
                                       GridPane.columnIndex="0"
                                       GridPane.rowIndex="3"/>
                                <TextField fx:id="txtRole"
                                           promptText="SUBSCRIBER"
                                           GridPane.columnIndex="1"
                                           GridPane.rowIndex="3"/>

                                <rowConstraints>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                    <RowConstraints/>
                                </rowConstraints>
                            </GridPane>

                            <!-- ===== ACTIONS ===== -->
                            <HBox alignment="CENTER_RIGHT" spacing="10">
                                <children>
                                    <Region HBox.hgrow="ALWAYS"/>

                                    <Button fx:id="btnCreate"
                                            text="Create Subscriber"
                                            styleClass="btnPrimary"
                                            onAction="#onCreateSubscriberClicked"/>

                                    <Button fx:id="btnDelete"
                                            text="Delete Subscriber"
                                            styleClass="btnSecondary"
                                            onAction="#onDeleteClicked"/>

                                    <Button fx:id="btnRefresh"
                                            text="Refresh"
                                            styleClass="btnSecondary"
                                            onAction="#onRefreshClicked"/>

                                    <Button fx:id="btnUpdate"
                                            text="Update"
                                            styleClass="btnPrimary"
                                            onAction="#onUpdateClicked"/>

                                    <Button fx:id="btnBack"
                                            text="Back"
                                            styleClass="btnSecondary"
                                            onAction="#onBackClicked"/>
                                </children>
                            </HBox>

                        </children>
                    </VBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
