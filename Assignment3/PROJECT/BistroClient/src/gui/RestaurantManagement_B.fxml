<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.RestaurantManagement_BController">

    <!-- ================= HEADER ================= -->
    <top>
        <HBox fx:id="header" alignment="CENTER">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>
            <children>
                <Label text="Restaurant Management"
                       styleClass="mainTitle">
                    <font>
                        <Font size="44"/>
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- ================= CENTER ================= -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="22">
            <padding>
                <Insets top="35" right="40" bottom="20" left="40"/>
            </padding>

            <children>

                <!-- Section title -->
                <Label text="Management actions"
                       styleClass="section"/>

                <!-- Actions -->
                <Button text="Update Tables"
                        onAction="#onUpdateTablesClicked"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"/>

                <Button text="Update Opening Hours"
                        onAction="#onUpdateOpeningHoursClicked"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"/>

                <Button text="Manage Users"
                        onAction="#onManageUsersClicked"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"/>

                <Button text="Manage Reservations"
                        onAction="#onManageReservationClicked"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"/>

                <Button text="Manage Waiting List"
                        onAction="#onWaitingListClicked"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"/>

                <!-- NEW BUTTON -->
                <Button text="Manage Current Diners"
                        onAction="#onManageCurrentDinersClicked"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"/>

                <Button fx:id="btnReports"
                        text="Reports"
                        onAction="#onReportsClicked"
                        prefWidth="720"
                        prefHeight="72"
                        styleClass="btnSecondary"/>

                <!-- Message -->
                <Label fx:id="lblMessage"
                       visible="false"
                       managed="false"
                       styleClass="errorMsg"/>

                <!-- Back -->
                <Button text="Back"
                        onAction="#onBackToMenuClicked"
                        styleClass="btnBack"/>

            </children>
        </VBox>
    </center>

</BorderPane>
