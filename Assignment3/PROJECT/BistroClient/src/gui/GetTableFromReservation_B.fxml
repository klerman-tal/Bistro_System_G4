<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" stylesheets="@Style.css"
    xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="guiControllers.GetTableFromReservation_BController"
>

    <!-- HEADER -->
    <top>
        <BorderPane fx:id="header">
            <padding>
                <Insets bottom="18" left="25" right="25" top="18"/>
            </padding>

            <left>
                <Label styleClass="title" text="Get Table" textFill="WHITE"/>
            </left>

            <right>
                <Button text="Back" onAction="#onBackClicked"
                        style="-fx-background-color: yellow; -fx-text-fill: black; -fx-font-size: 13px;" />
            </right>
        </BorderPane>
    </top>

    <!-- CONTENT -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="14">
            <padding>
                <Insets bottom="20" left="40" right="40" top="30" />
            </padding>

            <children>
                <Label styleClass="section" text="Get table from reservation" />

                <Label text="Enter your confirmation code:" />
                <TextField fx:id="txtCode" maxWidth="220" promptText="e.g., 123456" />

                <Button fx:id="btnGetTable" text="Get Table"
                        prefWidth="220"
                        styleClass="btnPrimary"
                        onAction="#onGetTableClicked"/>

                <Label fx:id="lblInfo" managed="false" visible="false"
                       style="-fx-text-fill: #2e7d32; -fx-font-size: 12px;" text=""/>

                <Label fx:id="lblError" managed="false" visible="false"
                       styleClass="errorMsg" text=""/>
            </children>
        </VBox>
    </center>

</BorderPane>
