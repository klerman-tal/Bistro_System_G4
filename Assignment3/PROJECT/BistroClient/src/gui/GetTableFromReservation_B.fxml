<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.GetTableFromReservation_BController">

    <!-- ===== HEADER ===== -->
    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="18" right="25" bottom="18" left="25"/>
            </padding>
            <children>
                <Label text="Get Table"
                       styleClass="mainTitle"
                       textFill="WHITE"/>
            </children>
        </HBox>
    </top>

    <!-- ===== CENTER ===== -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="30" right="40" bottom="20" left="40"/>
            </padding>

            <children>

                <Label text="Get table from reservation"
                       styleClass="section"/>

                <Label text="Enter your confirmation code:"/>

                <TextField fx:id="txtCode"
                           promptText="e.g., 123456"
                           maxWidth="260"/>

                <!-- Get Table -->
                <Button fx:id="btnGetTable"
                        text="Get Table"
                        prefWidth="260"
                        styleClass="btnSecondary"
                        onAction="#onGetTableClicked"/>

                <!-- Info -->
                <Label fx:id="lblInfo"
                       visible="false"
                       managed="false"
                       styleClass="infoMsg"/>

                <!-- Error -->
                <Label fx:id="lblError"
                       visible="false"
                       managed="false"
                       styleClass="errorMsg"/>

                <!-- Subscriber-only -->
                <VBox fx:id="boxMyActive"
                      spacing="10"
                      managed="false"
                      visible="false"
                      maxWidth="520">

                    <Separator/>

                    <Label text="My active reservations (click to fill the code):"
                           styleClass="section"/>

                    <TableView fx:id="tblMyActive"
                               prefHeight="150"
                               maxWidth="520">

                        <columns>
                            <TableColumn fx:id="colDate" text="Date" prefWidth="160"/>
                            <TableColumn fx:id="colTime" text="Time" prefWidth="120"/>
                            <TableColumn fx:id="colCode" text="Code" prefWidth="220"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Back -->
                <Button text="Back"
                        prefWidth="260"
                        styleClass="btnPrimary"
                        onAction="#onBackClicked"/>

            </children>
        </VBox>
    </center>

</BorderPane>
