<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.SubscribersReportController">

    <!-- ===== HEADER ===== -->
    <top>
        <HBox fx:id="header" alignment="CENTER_LEFT">
            <padding>
                <Insets top="18" right="25" bottom="18" left="25"/>
            </padding>
            <children>
                <Label text="Subscribers Report"
                       styleClass="title"
                       textFill="WHITE"/>
            </children>
        </HBox>
    </top>

    <!-- ===== CENTER ===== -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <children>

                <TabPane prefWidth="900" prefHeight="700">

                    <!-- ================= TAB 1 ================= -->
                    <Tab text="Active Subscribers" closable="false">
                        <VBox spacing="20" alignment="TOP_CENTER">
                            <padding>
                                <Insets top="25"/>
                            </padding>

                            <children>
                                <Label text="Active vs Inactive Subscribers"
                                       styleClass="section"/>

                                <PieChart fx:id="activeSubscribersPie"
                                          prefWidth="450"
                                          prefHeight="350"/>

                                <VBox spacing="6" alignment="TOP_LEFT">
                                    <Label fx:id="lblActiveSubscribers"/>
                                    <Label fx:id="lblInactiveSubscribers"/>
                                </VBox>
                            </children>
                        </VBox>
                    </Tab>

                    <!-- ================= TAB 2 ================= -->
                    <Tab text="Waiting List Activity" closable="false">
                        <VBox spacing="20" alignment="TOP_CENTER">
                            <padding>
                                <Insets top="25"/>
                            </padding>

                            <children>
                                <Label text="Subscribers Waiting List Entries per Day"
                                       styleClass="section"/>

                                <BarChart fx:id="waitingListChart"
                                          prefWidth="850"
                                          prefHeight="420">

                                    <xAxis>
                                        <CategoryAxis label="Day of Month"/>
                                    </xAxis>

                                    <yAxis>
                                        <NumberAxis label="Subscribers Count"/>
                                    </yAxis>

                                </BarChart>
                            </children>
                        </VBox>
                    </Tab>

                    <!-- ================= TAB 3 ================= -->
                    <Tab text="Reservation Trend" closable="false">
                        <VBox spacing="20" alignment="TOP_CENTER">
                            <padding>
                                <Insets top="25"/>
                            </padding>

                            <children>
                                <Label text="Subscriber Reservations Trend"
                                       styleClass="section"/>

                                <LineChart fx:id="reservationsTrendChart"
                                           prefWidth="850"
                                           prefHeight="420">

                                    <xAxis>
                                        <CategoryAxis label="Day of Month"/>
                                    </xAxis>

                                    <yAxis>
                                        <NumberAxis label="Reservations Count"/>
                                    </yAxis>

                                </LineChart>
                            </children>
                        </VBox>
                    </Tab>

                </TabPane>

            </children>
        </VBox>
    </center>

    <!-- ===== FOOTER ===== -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="12">
            <padding>
                <Insets top="10" right="40" bottom="20" left="40"/>
            </padding>
            <children>
                <Button text="Back"
                        fx:id="btnBack"
                        styleClass="btnSecondary"
                        onAction="#onBackClicked"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>
