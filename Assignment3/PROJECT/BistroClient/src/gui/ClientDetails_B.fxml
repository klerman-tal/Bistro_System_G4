<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.ClientDetails_BController">

    <!-- ===== HEADER ===== -->
    <top>
        <HBox fx:id="header" alignment="CENTER_LEFT">
            <padding>
                <Insets top="18" right="25" bottom="18" left="25"/>
            </padding>
            <children>
                <Label styleClass="title" text="Client Details"/>
            </children>
        </HBox>
    </top>

    <!-- ===== CENTER ===== -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="25">
            <padding>
                <Insets top="30" right="40" bottom="20" left="40"/>
            </padding>

            <children>

                <Label styleClass="section" text="Subscriber Information"/>

                <GridPane hgap="15" vgap="15">

                    <children>
                        <Label text="Subscriber number:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtSubscriberNumber"
                                   editable="false"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="0"/>

                        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtUserName"
                                   editable="false"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="1"/>

                        <Label text="First name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtFirstName"
                                   promptText="Enter first name"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="2"/>

                        <Label text="Last name:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="txtLastName"
                                   promptText="Enter last name"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="3"/>

                        <Label text="Phone number:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <TextField fx:id="txtPhoneNumber"
                                   promptText="0501234567"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="4"/>

                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <TextField fx:id="txtEmail"
                                   promptText="example@mail.com"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="5"/>
                    </children>

                    <columnConstraints>
                        <ColumnConstraints minWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>

                </GridPane>

                <Label fx:id="lblMessage"
                       visible="false"
                       managed="false"
                       styleClass="errorMsg"/>

                <Label styleClass="section" text="Reservation History"/>

                <!-- ✅ כאן הייתה השגיאה – TableView מתוקן -->
                <TableView fx:id="tblReservationHistory"
                           prefHeight="200"
                           prefWidth="520">

                    <columns>
                        <TableColumn fx:id="colDateTime"
                                     text="Date &amp; Time"
                                     prefWidth="180"/>
                        <TableColumn fx:id="colGuests"
                                     text="Guests"
                                     prefWidth="80"/>
                        <TableColumn fx:id="colCode"
                                     text="Confirmation Code"
                                     prefWidth="140"/>
                        <TableColumn fx:id="colStatus"
                                     text="Status"
                                     prefWidth="110"/>
                    </columns>

                </TableView>

            </children>
        </VBox>
    </center>

    <!-- ===== FOOTER ===== -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="12">
            <padding>
                <Insets top="10" right="40" bottom="20" left="40"/>
            </padding>
            <children>
                <Button fx:id="btnBack"
                        text="Back"
                        styleClass="btnSecondary"
                        onAction="#onBackToMenuClicked"/>

                <Button fx:id="btnUpdateDetails"
                        text="Update Details"
                        styleClass="btnPrimary"
                        onAction="#onUpdateDetailsClicked"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>
