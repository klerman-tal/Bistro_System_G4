<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.ClientDetails_BController">

    <!-- ===== HEADER ===== -->
    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="18" right="25" bottom="18" left="25"/>
            </padding>
            <children>
                <Label text="Client Details"
                       styleClass="mainTitle"
                       textFill="WHITE"/>
            </children>
        </HBox>
    </top>

    <!-- ===== CENTER ===== -->
    <center>
        <VBox alignment="CENTER" spacing="18">
            <padding>
                <Insets top="25" right="40" bottom="20" left="40"/>
            </padding>

            <children>

                <!-- ===== Subscriber Information ===== -->
                <Label text="Subscriber Information"
                       styleClass="section"/>

                <GridPane hgap="15" vgap="12" maxWidth="520" alignment="CENTER">
                    <children>
                        <Label text="Subscriber number:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="txtSubscriberNumber" editable="false"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtUserName"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="First name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtFirstName" promptText="Enter first name"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="Last name:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="txtLastName" promptText="Enter last name"
                                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                        <Label text="Phone number:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <TextField fx:id="txtPhoneNumber" promptText="0501234567"
                                   GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <TextField fx:id="txtEmail" promptText="example@mail.com"
                                   GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    </children>

                    <columnConstraints>
                        <ColumnConstraints minWidth="150" halignment="RIGHT"/>
                        <ColumnConstraints minWidth="260" hgrow="ALWAYS"/>
                    </columnConstraints>
                </GridPane>

                <Label fx:id="lblMessage"
                       visible="false"
                       managed="false"
                       styleClass="errorMsg"/>

                <!-- ===== ACTIONS (side by side) ===== -->
                <HBox alignment="CENTER" spacing="12">
                    <children>
                        <Button fx:id="btnUpdateDetails"
                                text="Update"
                                prefWidth="180"
                                styleClass="btnSecondary"
                                onAction="#onUpdateDetailsClicked"/>

                        <Button fx:id="btnBack"
                                text="Back"
                                prefWidth="180"
                                styleClass="btnPrimary"
                                onAction="#onBackToMenuClicked"/>
                    </children>
                </HBox>

                <!-- ===== HISTORY ===== -->
                <Separator maxWidth="850"/>

                <Label text="Reservation History"
                       styleClass="section"/>

                <TableView fx:id="tblReservationHistory"
                           prefHeight="420"
                           maxWidth="850"
                           VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colDateTime" text="Date &amp; Time" prefWidth="180"/>
                        <TableColumn fx:id="colGuests" text="Guests" prefWidth="80"/>
                        <TableColumn fx:id="colCode" text="Confirmation Code" prefWidth="140"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="110"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

            </children>
        </VBox>
    </center>

</BorderPane>
