<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane id="rootPane"
           prefHeight="650.0" prefWidth="950.0"
           stylesheets="@Style.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="guiControllers.Login_BController">

    <children>
        <VBox alignment="CENTER" spacing="40.0" maxWidth="600.0">

            <children>

                <!-- Top logo + header -->
                <VBox alignment="CENTER" spacing="15.0">
                    <children>

                        <ImageView fitHeight="120.0" fitWidth="120.0"
                                   pickOnBounds="true" preserveRatio="true"
                                   styleClass="logo-shadow">
                            <image>
                                <Image url="@../images/bistro_logo.png" />
                            </image>
                        </ImageView>

                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="WELCOME" styleClass="welcomeTitle"/>
                                <Label text="Bistro Restaurant Management System" styleClass="subtitleItalic"/>
                            </children>
                        </VBox>

                    </children>
                </VBox>

                <!-- Choice cards -->
                <HBox alignment="CENTER" spacing="40.0">
                    <children>

                        <!-- Subscriber -->
                        <VBox alignment="CENTER" spacing="20.0"
                              prefHeight="260.0" prefWidth="240.0"
                              styleClass="card30">
                            <children>
                                <Label text="ðŸ‘¤" styleClass="emojiBig"/>
                                <Label text="Subscriber" styleClass="cardTitle"/>
                                <Label text="Login to your account" styleClass="cardHint"/>

                                <Button mnemonicParsing="false"
                                        text="LOGIN"
                                        onAction="#handleSubscriberChoice"
                                        styleClass="btnDanger"/>
                            </children>
                        </VBox>

                        <!-- Guest -->
                        <VBox alignment="CENTER" spacing="20.0"
                              prefHeight="260.0" prefWidth="240.0"
                              styleClass="card30">
                            <children>
                                <Label text="ðŸ”‘" styleClass="emojiBig"/>
                                <Label text="Guest" styleClass="cardTitle"/>
                                <Label text="Quick access without ID" styleClass="cardHint"/>

                                <Button mnemonicParsing="false"
                                        text="CONTINUE"
                                        onAction="#handleGuestChoice"
                                        styleClass="btnWide25"/>
                            </children>
                        </VBox>

                    </children>
                </HBox>

                <!-- Register -->
                <VBox alignment="CENTER" spacing="5.0">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                    <children>
                        <Label text="Don't have a subscriber account yet?" styleClass="subtitle"/>
                        <Hyperlink text="Register Now"
                                   onAction="#handleRegisterChoice"
                                   styleClass="linkBlue"/>
                    </children>
                </VBox>

            </children>
        </VBox>
    </children>
</StackPane>
