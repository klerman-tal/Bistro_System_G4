<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane"
            stylesheets="@Style.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guiControllers.TableReservation_BController">

    <!-- ===== HEADER ===== -->
    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="18" right="25" bottom="18" left="25"/>
            </padding>
            <children>
                <Label text="Table Reservation"
                       styleClass="mainTitle"
                       textFill="WHITE"/>
            </children>
        </HBox>
    </top>

    <!-- ===== CENTER ===== -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="30" right="40" bottom="20" left="40"/>
            </padding>

            <children>

                <Label text="Reservation Details"
                       styleClass="section"/>

                <!-- Date -->
                <DatePicker fx:id="datePicker"
                            onAction="#onDateSelected"
                            maxWidth="260"/>

                <!-- Hour -->
                <ComboBox fx:id="cmbHour"
                          promptText="Select Hour"
                          maxWidth="260"/>

                <!-- Guests -->
                <TextField fx:id="txtGuests"
                           promptText="Number of guests"
                           maxWidth="260"/>

                <!-- Message -->
                <Label fx:id="lblMessage"
                       visible="false"
                       managed="false"
                       styleClass="errorMsg"/>

                <!-- Create -->
                <Button fx:id="btnCreate"
                        text="Create Reservation"
                        onAction="#onCreateClicked"
                        prefWidth="260"
                        styleClass="btnSecondary"/>

                <!-- Back -->
                <Button fx:id="btnBack"
                        text="Back"
                        onAction="#onBackClicked"
                        prefWidth="260"
                        styleClass="btnPrimary"/>

            </children>
        </VBox>
    </center>

</BorderPane>
