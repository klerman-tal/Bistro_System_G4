<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.MainGUI">

   <children>

      <Label layoutX="160.0" layoutY="20.0"
             prefWidth="480.0" prefHeight="50.0"
             text="Bistro Client â€“ Orders Management"
             style="-fx-alignment: center;">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Label>

      <TableView fx:id="tblOrders"
                 layoutX="50.0" layoutY="90.0"
                 prefWidth="700.0" prefHeight="320.0">
         <columns>
            <TableColumn fx:id="colOrderNumber"   text="Order number"       prefWidth="110.0"/>
            <TableColumn fx:id="colOrderDate"     text="Order date"         prefWidth="110.0"/>
            <TableColumn fx:id="colNumGuests"     text="Number of guests"   prefWidth="120.0"/>
            <TableColumn fx:id="colCode"          text="Code"               prefWidth="80.0"/>
            <TableColumn fx:id="colSubscriberId"  text="Subscriber ID"      prefWidth="110.0"/>
            <TableColumn fx:id="colPlacingDate"   text="Date of placing"    prefWidth="150.0"/>
            <TableColumn fx:id="colHiddenSubscriberId"
                         text="Subscriber ID"
                         prefWidth="0.0" minWidth="0.0" maxWidth="0.0"/>
         </columns>
      </TableView>

      <Label layoutX="60.0" layoutY="440.0"
             text="Update new date:"
             style="-fx-font-size: 18;">
      </Label>

      <DatePicker fx:id="dateNewDate"
                  layoutX="250.0" layoutY="438.0"
                  prefWidth="200.0" />

      <Button fx:id="btnUpdateDate"
              layoutX="500.0" layoutY="435.0"
              prefWidth="140.0" prefHeight="32.0"
              text="Update Date"
              onAction="#onUpdateDate"
              style="-fx-background-radius: 8; -fx-background-color: #2f80ed; -fx-text-fill: white;" />

      <Label layoutX="60.0" layoutY="490.0"
             text="Update guest count:"
             style="-fx-font-size: 18;">
      </Label>

      <TextField fx:id="txtNewGuests"
                 layoutX="250.0" layoutY="488.0"
                 prefWidth="200.0"
                 promptText="Number of guests" />

      <Button fx:id="btnUpdateGuests"
              layoutX="500.0" layoutY="485.0"
              prefWidth="140.0" prefHeight="32.0"
              text="Update Guests"
              onAction="#onUpdateGuests"
              style="-fx-background-radius: 8; -fx-background-color: #27ae60; -fx-text-fill: white;" />

   </children>

</AnchorPane>